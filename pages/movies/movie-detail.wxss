/* pages/movies/movie-detail.wxss */
@import "stars/star-tmp.wxss";

.movie-detail-container{
    display:flex;
    flex-direction: column;
    width: 100%;
    overflow: hidden;
}
.movie-detail-headerImg{
    display:flex;
    flex-direction: column;
    height: 115px;
    width: 100%;
    background-color: rgba(50,50,50,0.3);
    color: white;
    padding: 30rpx;
    letter-spacing: 2rpx;
}
.headerImg-title{
    font-size: 40rpx;
    margin-bottom: 35rpx;
}
.headerImg-date{
    font-size: 30rpx;
    margin-bottom: 40rpx;
}
.headerImg-date text{
    font-size:30rpx;
    font-weight: bold;
    margin: 0 10rpx;
}
.headerImg-like-comment{
    display: flex;
    flex-direction: row;
    font-size: 11px;
    color: rgba(50,50,50,0.8);
}
.like-comment-num{
    margin-right: 30rpx;
}
.like-comment-num text{
    color:red;
    margin: 0 20rpx 0 0;
}
.headerImg-float{
    width: 110px;
    height: 160px;
    position: absolute;
    right: 30rpx;
    top: 45px;
}

/**/

.movie-detail-data{
    padding: 20px 30rpx;
    color: rgba(50,50,50,0.8);
    font-size: 23rpx;
    letter-spacing: 2rpx;
}
.data-title{
    font-size: 26rpx;
    margin-bottom: 20px;
}
.data-row{
    display: flex;
    flex-direction: row;
    margin: 10px 0;
}
.data-row .title{
    color: rgba(50,50,50,0.5);
    margin-right: 30rpx;
}
.data-row .label{
    margin-right: 10rpx;
}



/**/
.movie-detail-summary{
    display: flex;
    flex-direction: column;
    padding: 20px 30rpx;
    color: rgba(50,50,50,0.5);
    font-size: 24rpx;
    border-top:1px solid #e8e8e8;
    border-bottom: 1px solid #e8e8e8;
}
.summary-title{
    margin-bottom: 26rpx;
}
.summary-content{
    letter-spacing: 1px;
    line-height: 1.8em;
}

/**/
.movie-detail-actor{
    padding: 20px 30rpx;
}
.actor-title{
    margin-bottom: 30px;
    color: rgba(50,50,50,0.5);
    font-size: 24rpx;
}
.actor-array{
    display: flex;
}
.actor-array image{
    width: 100px;
    height: 160px;
    margin: 5px;
}